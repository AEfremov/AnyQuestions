<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="6dp">

        <com.efremov.anyquestions.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:textSize="20sp"
            android:letterSpacing="0.05"
            android:textColor="@android:color/white"
            app:typeFaceAsset="fonts/SkolSerifa.ttf"/>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/questionsCountView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <com.efremov.anyquestions.CustomFontTextView
            android:id="@+id/setQuestionsCountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество вопросов:"
            android:textSize="18sp"
            android:textColor="@color/color_1"
            android:letterSpacing="0.05"
            app:typeFaceAsset="fonts/SkolSerifa.ttf"
            android:layout_centerVertical="true"/>

        <com.efremov.anyquestions.CustomFontTextView
            android:id="@+id/questionsCountValueView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textSize="20sp"
            android:textColor="@color/color_1"
            android:letterSpacing="0.05"
            app:typeFaceAsset="fonts/SkolSerifa.ttf"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/newQuestionView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionsCountView"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <com.efremov.anyquestions.CustomFontTextView
            android:id="@+id/addNewQuestionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавьте свой вопрос"
            android:textSize="18sp"
            android:textColor="@color/color_1"
            android:letterSpacing="0.05"
            app:typeFaceAsset="fonts/SkolSerifa.ttf"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_right_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newQuestionView"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/darkThemeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/spacer"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone">

        <com.efremov.anyquestions.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Темная тема?"
            android:textSize="18sp"
            android:textColor="@color/color_1"
            android:letterSpacing="0.05"
            app:typeFaceAsset="fonts/barselona.ttf"
            android:layout_centerVertical="true"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/changeThemeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>